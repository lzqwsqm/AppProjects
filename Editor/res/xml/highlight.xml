<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/highlight" android:key="highlight">
        <CheckBoxPreference android:title="@string/enable_highlight" android:key="enable_highlight" android:summary="@string/request_restart" android:defaultValue="true" />
        <EditTextPreference android:title="@string/highlight_limit" android:key="highlight_limit" android:defaultValue="400" android:dialogTitle="@string/highlight_limit" android:dialogMessage="@string/highlight_limit_message" android:positiveButtonText="@string/ok" android:negativeButtonText="@string/cancel" />
        <CheckBoxPreference android:title="@string/use_custom_hl_color" android:key="use_custom_hl_color" android:summary="@string/use_custom_hl_color_msg" android:defaultValue="false" />
        <ListPreference android:title="@string/color_scheme" android:key="hl_colorscheme" android:summary="@string/request_restart" android:defaultValue="@string/default_color_scheme" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/custom_hl_color" android:key="custom_highlight_color">
        <Preference android:title="@string/font_color" android:key="hlc_font" />
        <Preference android:title="@string/backgroup_color" android:key="hlc_backgroup" />
        <Preference android:title="@string/string_color" android:key="hlc_string" />
        <Preference android:title="@string/keyword_color" android:key="hlc_keyword" />
        <Preference android:title="@string/comment_color" android:key="hlc_comment" />
        <Preference android:title="@string/tag_color" android:key="hlc_tag" />
        <Preference android:title="@string/attr_color" android:key="hlc_attr_name" />
        <Preference android:title="@string/function_color" android:key="hlc_function" />
    </PreferenceCategory>
</PreferenceScreen>
