<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" 
		android:id="@+id/top_layout" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content">
        <ImageView android:layout_gravity="bottom" 
			android:id="@+id/left_line" 
			android:background="@drawable/menu_bg_left" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" />
        <ImageView android:layout_gravity="bottom" 
			android:id="@+id/right_line" 
			android:background="@drawable/menu_bg_right" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout android:id="@+id/tips_content_layout" 
		android:background="@drawable/menu_bg_down" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
        <LinearLayout android:gravity="center" 
			android:orientation="vertical" 
			android:id="@+id/menuparent" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
            <LinearLayout android:id="@+id/linearLayout_closeothers" 
				android:background="@drawable/menu_selector" 
				android:layout_width="fill_parent" 
				android:layout_height="@dimen/menu_item_height">
                <ImageView android:layout_gravity="center_vertical" 
					android:id="@+id/imageView1" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_marginLeft="3.0dip" 
					android:layout_marginRight="3.0dip" 
					android:src="@drawable/tab_menu_closeothers" />
                <TextView android:textSize="@dimen/menu_text_size" 
					android:textColor="#ff55595d" 
					android:layout_gravity="center_vertical" 
					android:id="@+id/textView1" 
					android:paddingRight="5.0dip" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:text="@string/tab_close_other" />
            </LinearLayout>
            <LinearLayout android:id="@+id/linearLayout2" 
				android:background="@drawable/pop_menu_icon_line" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/linearLayout_closeright" 
				android:background="@drawable/menu_selector" 
				android:layout_width="fill_parent" 
				android:layout_height="@dimen/menu_item_height">
                <ImageView android:layout_gravity="center_vertical" 
					android:id="@+id/imageView3" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:layout_marginLeft="3.0dip" 
					android:layout_marginRight="3.0dip" 
					android:src="@drawable/tab_menu_closeright" />
                <TextView android:textSize="@dimen/menu_text_size" 
					android:textColor="#ff55595d" 
					android:layout_gravity="center_vertical" 
					android:id="@+id/textView3" 
					android:paddingRight="5.0dip" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content" 
					android:text="@string/tab_close_right" />
            </LinearLayout>
            <LinearLayout android:id="@+id/linearLayout4" android:background="@drawable/pop_menu_icon_line" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <LinearLayout android:id="@+id/linearLayout_closeall" android:background="@drawable/menu_selector" android:layout_width="fill_parent" android:layout_height="@dimen/menu_item_height">
                <ImageView android:layout_gravity="center_vertical" 
					android:id="@+id/imageView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3.0dip" android:layout_marginRight="3.0dip" android:src="@drawable/tab_menu_closeall" />
                <TextView android:textSize="@dimen/menu_text_size" android:textColor="#ff55595d" android:layout_gravity="center_vertical" 
					android:id="@+id/textView4" android:paddingRight="5.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tab_close_all" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
