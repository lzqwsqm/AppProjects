<resources>
    <color name="darkColorControlNormal">@color/abc_secondary_text_material_dark</color>
    <color name="darkWindowBackground">#ff424242</color>
    <color name="darkDividerColor">#30ffffff</color>
    <color name="darkDividerColor2">#ff0066</color>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--全局字体-->
        <item name="android:textColorPrimary">@color/editor_primary_text_material_dark</item>
        <!-- Preference Label and summary text color -->
        <item name="android:textColorSecondary">@color/editor_secondary_text_material_dark</item>
        <item name="android:textColorPrimaryDisableOnly">@color/editor_secondary_text_material_dark</item>
        <!-- 工具栏背景 -->
        <item name="colorPrimary">@color/primary_material_dark</item>
        <!--状态栏背景-->
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <!--按钮类默认颜色-->
        <item name="colorControlNormal">@color/darkColorControlNormal</item>
        <!--按钮类选中颜色-->
        <item name="colorAccent">@color/darkColorControlNormal</item>
        <!--导航栏背景-->
        <!--<item name="android:navigationBarColor">@color/navigationBarColor</item>-->
        <!-- 浮在toolbar上面 -->
        <item name="windowActionModeOverlay">true</item>
        <!--window背景-->
        <item name="android:windowBackground">@color/darkWindowBackground</item>

        <!--<item name="android:actionBarStyle">@style/Toolbar</item>-->
        <item name="actionBarStyle">@style/Toolbar</item>
        <!--使用方式 app:theme="?attr/actionBarTheme"-->
        <item name="actionBarTheme">@style/DarkToolbarTheme</item>
        <item name="actionBarPopupTheme">@style/DarkToolbarPopupTheme</item>
        <!--菜单字体颜色-->
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="actionModeStyle">@style/DarkActionMode</item>
        <item name="actionModeFindDrawable">@drawable/find_white</item>
        <item name="actionModeCloseDrawable">@drawable/back_btn</item>

        <item name="dividerColor">@color/darkDividerColor</item>
        <item name="android:listDivider">@drawable/divider_drak</item>

        <item name="android:textViewStyle">@style/DarkTextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>

        <!--App自定义-->
        <item name="netLoadingDrawable">@drawable/loading_icon</item>
        <item name="tabBackground">@drawable/drawer_tab_item_dark_background</item>
        <item name="listItemBackground">@drawable/gray_selectable_item_background</item>
        <item name="highlightBackground">#545454</item>
        <item name="toolbarIconNormalColor">#ffffff</item>
        <item name="toolbarIconDisabledColor">#50ffffff</item>
        <item name="menuIconNormalColor">#829294</item>
    </style>

    <style name="DarkToolbarTheme" parent="@style/ToolbarTheme">
        <item name="android:actionMenuTextAppearance">@style/Toolbar.Item</item>
    </style>

    <style name="DarkToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/darkColorControlNormal</item>
    </style>

    <style name="DarkTextViewStyle" parent="TextViewStyle">
        <!-- 注意,Toolbar Menu也会有影响 -->
        <item name="android:textColor">@color/editor_secondary_text_material_dark</item>
    </style>

    <color name="dark_actionmode_light_background">#666666</color>
    <style name="DarkActionMode" parent="@style/ActionMode">
        <item name="background">@color/dark_actionmode_light_background</item>
    </style>
</resources>