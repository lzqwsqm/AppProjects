<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <!--Toolbar主题，使用方式：app:theme="@style/ToolbarTheme"-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#fff</item>
    </style>

    <!--Toolbar样式，使用方式：style="@style/Toolbar" 要改变返回按钮样式时，要配合app:theme使用-->
    <style name="Toolbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="elevation">3dp</item>

        <item name="titleTextColor">#fff</item>
        <item name="subtitleTextColor">#fff</item>

        <item name="android:elevation" tools:ignore="NewApi">3dp</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextAppearance">@style/Toolbar.Item</item>
    </style>

    <style name="Toolbar.Item" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Toolbar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Toolbar.SubTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">#ffffff</item>
    </style>

    <color name="editor_actionmode_light_background">#8BC34A</color>
    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/editor_actionmode_light_background</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/ActionMode.Title</item>
        <item name="subtitleTextStyle">@style/ActionMode.Subtitle</item>
    </style>

    <style name="ActionMode.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ActionMode.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#cecece</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="MaterialEditText">
        <item name="met_primaryColor">?attr/colorAccent</item>
        <item name="met_textColor">?android:attr/textColorPrimary</item>
        <item name="met_textColorHint">?android:attr/textColorSecondary</item>
        <item name="met_underlineColor">?attr/dividerColor</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
    </style>

    <style name="ButtonH1">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/button_h1_selector</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditorWebViewTheme" parent="android:Widget.WebView">
        <item name="android:textSelectHandleLeft">@drawable/transparent1px</item>
        <item name="android:textSelectHandleRight">@drawable/transparent1px</item>
        <item name="android:textSelectHandle">@drawable/transparent1px</item>
    </style>
</resources>
